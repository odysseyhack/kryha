{
  "kind": "Deployment",
  "spec": {
    "replicas": 1,
    "template": {
      "spec": {
        "containers": [
          {
            "image": "kryha/drone",
            "name": "pod",
            "args": ["sh", "-c", "node index.js && npx serve -p 3000"],
            "ports": [
              {
                "containerPort": 3000
              }
            ],
            "env": [
              {
                "name": "CLUSTER",
                "value": "TRUE"
              },
              {
                "name": "APP_RPC",
                "value": "http://ganache:8545"
              },
              {
                "name": "DRONE_ADDRESS",
                "value": "0x61eD2C6d4cb180f48503e8D55A5e743bbf3f8E79"
              },
              {
                "name": "WORLD_ADDRESS",
                "value": "0x4fBa6E88bFE2A892baf7876DbD0CDd5719cd8DB7"
              }
            ]
          }
        ]
      },
      "metadata": {
        "labels": {
          "app": "pod"
        }
      }
    },
    "selector": {
      "matchLabels": {
        "app": "pod"
      }
    }
  },
  "apiVersion": "apps/v1",
  "metadata": {
    "labels": {
      "app": "pod"
    },
    "name": "pod"
  }
}
